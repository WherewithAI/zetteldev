FROM nvidia/cuda:12.4.0-runtime-ubuntu22.04

ARG DEBIAN_FRONTEND=noninteractive
ARG FIXUID_VERSION=0.6.0

ENV TZ=Etc/UTC \
    SHELL=/bin/bash \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        ca-certificates \
        curl \
        gnupg \
        lsb-release \
        software-properties-common && \
    rm -rf /var/lib/apt/lists/*

RUN mkdir -p /etc/apt/keyrings && \
    curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | gpg --dearmor -o /etc/apt/keyrings/githubcli-archive-keyring.gpg && \
    chmod go+r /etc/apt/keyrings/githubcli-archive-keyring.gpg && \
    echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" > /etc/apt/sources.list.d/github-cli.list && \
    curl -fsSL https://deb.nodesource.com/gpgkey/nodesource-repo.gpg.key | gpg --dearmor -o /etc/apt/keyrings/nodesource.gpg && \
    chmod go+r /etc/apt/keyrings/nodesource.gpg && \
    echo "deb [signed-by=/etc/apt/keyrings/nodesource.gpg] https://deb.nodesource.com/node_20.x nodistro main" > /etc/apt/sources.list.d/nodesource.list

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        bash-completion \
        build-essential \
        pkg-config \
        cmake \
        ninja-build \
        git \
        git-lfs \
        gh \
        openssh-client \
        unzip \
        p7zip-full \
        xz-utils \
        htop \
        procps \
        lsof \
        strace \
        jq \
        ripgrep \
        fd-find \
        fzf \
        bat \
        delta \
        tree \
        less \
        file \
        vim \
        python3 \
        python3-pip \
        python3-venv \
        nodejs \
        sudo && \
    rm -rf /var/lib/apt/lists/*

RUN ln -sf /usr/bin/fdfind /usr/local/bin/fd && \
    ln -sf /usr/bin/batcat /usr/local/bin/bat && \
    git lfs install --system

RUN curl -fsSL https://pixi.sh/install.sh | bash -s -- --yes && \
    mv /root/.pixi/bin/pixi /usr/local/bin/pixi && \
    rm -rf /root/.pixi

RUN curl -fsSL "https://github.com/boxboat/fixuid/releases/download/v${FIXUID_VERSION}/fixuid-${FIXUID_VERSION}-linux-amd64.tar.gz" | \
        tar -C /usr/local/bin -xzf - fixuid && \
    chown root:root /usr/local/bin/fixuid && \
    chmod 4755 /usr/local/bin/fixuid

RUN npm install -g @anthropic-ai/claude-code @openai/codex

RUN groupadd --gid 1000 dev && \
    useradd --uid 1000 --gid dev --create-home --shell /bin/bash dev && \
    mkdir -p /workspaces && \
    chown dev:dev /workspaces

ENV PATH=/home/dev/.local/bin:${PATH} \
    PIXI_CACHE_DIR=/caches/pixi \
    UV_CACHE_DIR=/caches/uv \
    PIP_CACHE_DIR=/caches/pip \
    JUPYTERCACHE=/caches/jupyter_cache \
    HF_HOME=/caches/huggingface

COPY ops/devcontainer/config/fixuid.yml /etc/fixuid/config.yml
COPY ops/devcontainer/scripts/fixuid-entrypoint.sh /usr/local/bin/fixuid-entrypoint
COPY ops/devcontainer/scripts/zdev /usr/local/bin/zdev
COPY ops/devcontainer/docs /opt/zetteldev/docs

RUN chmod +x /usr/local/bin/fixuid-entrypoint /usr/local/bin/zdev && \
    chown -R dev:dev /opt/zetteldev

WORKDIR /workspaces
USER 1000:1000

ENTRYPOINT ["/usr/local/bin/fixuid-entrypoint"]
CMD ["zdev", "shell"]
